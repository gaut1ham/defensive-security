import time

MAX_ATTEMPTS = 3
attempts = 0

while attempts < MAX_ATTEMPTS:
    password = input("Enter password: ")
    if password == "secure123":
        print("Access granted")
        break
    else:
        attempts += 1
        print("Invalid password")

if attempts == MAX_ATTEMPTS:
    print("ðŸš« Too many attempts. Account locked.")
    time.sleep(5)
